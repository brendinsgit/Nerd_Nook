<!-- views/games/form.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
  
</head>
<body>
    <% include ../partials/header %>
    <h2 id="h2-form">Game Details</h2>
    <div id="form-container">
      <form action="/games" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required><br>

        <label for="reviews">Reviews:</label>
        <input type="text" id="reviews" name="reviews" required><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea><br>

        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" required><br>

        <label for="developer">Developer:</label>
        <input type="text" id="developer" name="developer" required><br>

        <label for="publisher">Publisher:</label>
        <input type="text" id="publisher" name="publisher" required><br>

        <label for="releaseDate">Release Date:</label>
        <input type="date" id="releaseDate" name="releaseDate" required><br>

        <input type="submit" value="Add Game">
      </form>
    </div>
    <% include ../partials/footer %>
</body>
</html>
